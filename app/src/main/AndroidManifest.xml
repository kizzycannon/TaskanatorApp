<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskanatorapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskanatorApp">
        <activity
            android:name=".CompletedTaskDetails"
            android:parentActivityName=".CompletedTasks">
        </activity>
        <activity
            android:name=".CompletedTasks"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".AddTask"
            android:parentActivityName=".ManageTasks" />
        <activity android:name=".EditProgressBar" />
        <activity
            android:name=".AddToActiveTasks"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".GenerateRandomTask"
            android:parentActivityName=".AddToActiveTasks" />
        <activity
            android:name=".YourRandomTask"
            android:parentActivityName=".GenerateRandomTask" />
        <activity
            android:name=".EditTask"
            android:parentActivityName=".ManageTasks" />
        <activity
            android:name=".ManageTasks"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TaskDetails"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>